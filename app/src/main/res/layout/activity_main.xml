<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryInactive"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/logo"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="20dp"
        android:gravity="center"
        app:srcCompat="@drawable/logo" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signin_Button"
        android:background="@drawable/button_background"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorTertiaryInactive"
        android:text="Sign In"
        android:textSize="25dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/signup_Button"
        android:background="@drawable/button_background"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/signin_Button"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="110dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorTertiaryInactive"
        android:text="Sign Up"
        android:textSize="25dp" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/continue_as_guest_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_Button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="Continue as Guest"
        android:textSize="18dp"
        android:textColor="@color/colorQuaternaryInactive"
        android:clickable="true" />

</RelativeLayout>


